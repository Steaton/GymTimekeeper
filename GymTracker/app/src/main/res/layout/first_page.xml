<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:orientation="vertical"
    android:padding="5dp"
    android:nestedScrollingEnabled="true">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="one.thing.well.gymtimekeeper.display.SummaryFragment"
        android:id="@+id/summaryFragment"
        tools:layout="@layout/summary_fragment" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="one.thing.well.gymtimekeeper.display.SessionsFragment"
        android:id="@+id/sessionsFragment"
        tools:layout="@layout/sessions_fragment" />

</LinearLayout>
